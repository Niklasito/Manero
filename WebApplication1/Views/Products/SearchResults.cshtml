@using Manero.Models
@using Manero.Models.Entities

@model List<Manero.Helpers.Dtos.ProductModel>

<h2>Search Results</h2>
@if (Model.Any())
{
    <ul>
        @foreach (var product in Model)
        {
            <li>
                <div>
                    <strong>@product.Name</strong>
                    <p>@product.Description</p>
                    <p>Price: @product.Price</p>
                    <img src="@product.PrimaryImage?.ImageUrl" alt="Product Image" width="100" height="100"> 

                    <form method="post" asp-action="AddToCart" asp-controller="Cart">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="add-to-cart-btn">Add to Cart</button>
                        <button type="button" class="add-to-wishlist-btn">Add to Wishlist</button>
                    </form>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p>No results found.</p>
}
<a asp-controller="Products" asp-action="Index">Back to Search</a>
<Partial name="/Views/Partials/_meny.cshtml" />