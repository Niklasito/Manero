@model List<ProductEntity>

<h1>Search Results</h1>

@if (Model.Count == 0)
{
    <ul>
        @foreach (var product in Model)
        {
            <li>
                <a href="@Url.Action("Details", "Products", new { id = product.Id })">
                    @product.Name
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No products found for your search query.</p>

}
